{% extends "base.html.twig" %}
{% block title %}Connexion{% endblock %}
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container border rounded bg-light mt-5 w-25 p-4">
        <form action="{{ path("login") }}" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Nom d'utilisateur</label>
                <input type="text" id="username" name="_username" class="form-control"/>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form-control" value="{{ last_username }}"/>
            </div>
            <button type="submit" class="btn btn-primary mx-auto d-block">Valider</button>
        </form>
    </div>
{% endblock %}